        <Button x:Name="rollDiceButton" Content="Toss coin" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Height="50" FontSize="20" FontWeight="Bold" Click="rollDiceButton_Click"/>
        <ProgressBar x:Name="rollDiceProgressBar" HorizontalAlignment="Left" Height="10" Margin="10,76,0,0" VerticalAlignment="Top" Width="150"/>

    </Grid>
